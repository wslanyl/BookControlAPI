{
  "compilerOptions": {
    /* Configurações de Pastas */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Configurações Básicas para Node.js */
    "target": "es2016",             /* Versão do JavaScript gerado */
    "module": "commonjs",           /* Padrão do Node.js (mais fácil para este exercício) */
    "moduleResolution": "node",
    "esModuleInterop": true,

    /* OBRIGATÓRIO PARA TYPEORM (A parte mais importante) */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    /* Configurações de Tipagem e Rigor */
    "strict": true,
    "strictPropertyInitialization": false, /* Permite declarar campos na Entidade sem valor inicial */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}